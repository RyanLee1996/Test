<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ryan.hibernate">

    <class name="ryan.hibernate.StudentEntity" table="student" schema="frame">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name"/>
        <property name="age" column="age"/>
        <property name="profession" column="profession"/>

        <many-to-one name="courseid" class="ryan.hibernate.CourseEntity">
            <column name="cid"/>
        </many-to-one>
    </class>
</hibernate-mapping>