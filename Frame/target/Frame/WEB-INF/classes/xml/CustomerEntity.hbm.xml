<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ryan.hibernate">

    <class name="ryan.hibernate.CustomerEntity" table="customer" schema="frame">
        <cache usage="read-only"/>
        <id name="id" column="id"/>
        <property name="name" column="name"/>
        <property name="phone" column="phone"/>
        <set name="goodsById" inverse="true" >
            <cache usage="read-only"/>
            <key>
                <column name="uid" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="ryan.hibernate.GoodsEntity"/>
        </set>
    </class>
</hibernate-mapping>