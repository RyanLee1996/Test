<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ryan.hibernate">

    <class name="ryan.hibernate.DepartmentEntity" table="department" schema="frame">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name"/>
        <set name="employeeEntities" cascade="save-update,delete,delete-orphan">
            <key>
                <column name="did"/>
            </key>
            <one-to-many not-found="ignore" class="ryan.hibernate.EmployeeEntity"/>
        </set>
    </class>
</hibernate-mapping>